<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ProdutoFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nome Produto"
        android:ellipsize="end"
        android:singleLine="true"
        android:id="@+id/productName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Linha"
        android:id="@+id/productLinha"
        android:layout_below="@+id/productName"
        android:layout_alignLeft="@+id/productName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Descrição"
        android:id="@+id/descriptionTitle"
        android:layout_below="@+id/productPrice"
        android:layout_alignLeft="@+id/PriceDescription"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Produto Descrição"
        android:id="@+id/productDescription"
        android:layout_below="@+id/descriptionTitle"
        android:layout_alignLeft="@+id/descriptionTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Preço Produto"
        android:id="@+id/productPrice"
        android:layout_alignBottom="@+id/PriceDescription"
        android:paddingBottom="1dp"
        android:layout_toRightOf="@+id/PriceDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Preço: "
        android:id="@+id/PriceDescription"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/productLinha"
        android:layout_alignLeft="@+id/productLinha" />

</RelativeLayout>
