<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#ff5b2325" />
            <gradient  android:angle="-90"  android:startColor="#ff6b0204" android:endColor="#ff690b14"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#ff5b2325" />
            <solid  android:color="#5f0c16"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#ff5b2325" />
            <gradient  android:angle="-90"  android:startColor="#ff994b49" android:endColor="#ff5f0f0e" />
        </shape>
    </item>
</selector>